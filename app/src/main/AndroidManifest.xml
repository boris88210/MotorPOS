<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.develop.boris.mobilepos_ver3">

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon_96px"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_icon_96px"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_drawer2"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".SaleBuilderActivity"
            android:label="@string/title_activity_sale_builder"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.develop.boris.mobilepos_ver3.MainActivity"/>
        </activity>
        <activity
            android:name=".CategorySettingActivity"
            android:label="@string/title_activity_category_setting"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.develop.boris.mobilepos_ver3.MainActivity"/>
        </activity>
        <activity
            android:name=".ServiceSettingActivity"
            android:label="@string/title_activity_service_setting"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.develop.boris.mobilepos_ver3.MainActivity"/>
        </activity>
        <activity
            android:name=".myDetail.MyDetailCustomerActivity"
            android:label="@string/title_activity_my_detail_customer"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.develop.boris.mobilepos_ver3.MainActivity"/>
        </activity>
        <activity
            android:name=".myDetail.MyDetailSaleActivity"
            android:label="@string/title_activity_my_detail_sale"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.develop.boris.mobilepos_ver3.MainActivity"/>
        </activity>
        <activity
            android:name=".myDetail.MyDetailProductActivity"
            android:label="@string/title_activity_my_detail_product"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.develop.boris.mobilepos_ver3.MainActivity"/>
        </activity>
        <activity
            android:name=".myDetail.MyDetailSupplierActivity"
            android:label="@string/title_activity_my_detail_supplier"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.develop.boris.mobilepos_ver3.MainActivity"/>
        </activity>
        <activity
            android:name=".QuantityAlertPageActivity"
            android:label="@string/title_activity_quantity_alert_page"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.develop.boris.mobilepos_ver3.MainActivity"/>
        </activity>
        <activity
            android:name=".PurchaseActivity"
            android:label="@string/title_activity_purchase"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.develop.boris.mobilepos_ver3.MainActivity"/>
        </activity>
    </application>

</manifest>